@model TamFinansCase.Entites.Concrete.Category
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_TamLayout.cshtml";
}


<h3>Yeni Kitap Ekleme</h3>
<br />

@using (Html.BeginForm("AddCategory", "Category", FormMethod.Post,
    new
    {
        @class = "form-horizontal",
        enctype = "multipart/form-data"
    }))
{
    @Html.AntiForgeryToken()
    <div class="col-md-6 offset-3">

        <div class="form-group">
            @Html.LabelFor(x => x.CategoryName)
            @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.CategoryName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-info" id="btn3" style="float:right">
                Kategori Oluştur
            </button>
            @Html.ActionLink("Listeye Geri Dön", "GetCategoryList", "Category")
        </div>

    </div>

    <script>
        $('#btn3').click(function () {
            swal("Tebriklerr!", "Başarılı bir şekilde eklendi!", "success");
        })
    </script>
}


