@model TamFinansCase.Entites.Concrete.Book
@{
    ViewBag.Title = "AddBook";
    Layout = "~/Views/Shared/_TamLayout.cshtml";
}

<h3>Yeni Kitap Ekleme</h3>
<br />

@using (Html.BeginForm("AddBook", "Book", FormMethod.Post,
    new
    {
        @class = "form-horizontal",
        enctype = "multipart/form-data"
    }))
{
    @Html.AntiForgeryToken()
    <div class="col-md-6 offset-3">

        <div class="form-group">
            @Html.LabelFor(x => x.BookName)
            @Html.TextBoxFor(x => x.BookName, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.BookName, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.Label("Kategori")
            @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.vlc, "Kategori Seçiniz", new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.CategoryId, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.WriterName)
            @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.WriterName, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-info" id="btn1" style="float:right">
                Kitap Oluştur
            </button>
            @Html.ActionLink("Listeye Geri Dön", "GetList", "Book")
        </div>

    </div>

    <script>
        $('#btn1').click(function () {
            swal("Tebriklerr!", "Başarılı bir şekilde eklendi!", "success");
        })
    </script>
}



